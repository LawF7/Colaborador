@model ColaboradorCreacionViewModel
@{
    ViewData["Title"] = "Crear Colaborador";
}

<h1 style="color: rebeccaPurple; text-align:center;">Colaborador</h1>
<br />
<form asp-action="Crear">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <!-- Usamos un contenedor con ancho limitado -->
    <div class="container" style="max-width: 600px;">
        <div class="mb-3">
            <label asp-for="DepartamentoId" class="form-label"></label>
            <div class="input-group">
                <span class="input-group-text"><i class="bi bi-building"></i></span>
                <select asp-for="DepartamentoId" asp-items="Model.Departamentos" class="form-select"></select>
            </div>
            <span asp-validation-for="DepartamentoId" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="DPI" class="form-label"></label>
            <div class="input-group">
                <span class="input-group-text"><i class="bi bi-credit-card"></i></span>
                <input asp-for="DPI" class="form-control" />
            </div>
            <span asp-validation-for="DPI" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="NombreCompleto" class="form-label"></label>
            <div class="input-group">
                <span class="input-group-text"><i class="bi bi-person"></i></span>
                <input asp-for="NombreCompleto" class="form-control" />
            </div>
            <span asp-validation-for="NombreCompleto" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Telefono" class="form-label"></label>
            <div class="input-group">
                <span class="input-group-text"><i class="bi bi-telephone"></i></span>
                <input asp-for="Telefono" class="form-control" />
            </div>
            <span asp-validation-for="Telefono" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="CorreoElectronico" class="form-label"></label>
            <div class="input-group">
                <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                <input asp-for="CorreoElectronico" class="form-control" />
            </div>
            <span asp-validation-for="CorreoElectronico" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Guardar</button>
        <a class="btn btn-secondary" asp-action="Index">Volver</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
