@model Departamento
@{
    ViewData["Title"] = "Editar Departamento";
}

<h1 style="color: rebeccapurple; text-align: center;">Editar Departamento: @Model.Nombre</h1>
<br />

<form asp-action="Editar">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <!-- Contenedor con ancho limitado -->
    <div class="container" style="max-width: 600px;">
        <!-- ID -->
        <div class="mb-3">
            <label asp-for="Id" class="form-label"></label>
            <div class="input-group">
                <span class="input-group-text"><i class="bi bi-key"></i></span>
                <input disabled asp-for="Id" class="form-control" />
            </div>
        </div>

        <!-- Nombre -->
        <div class="mb-3">
            <label asp-for="Nombre" class="form-label"></label>
            <div class="input-group">
                <span class="input-group-text"><i class="bi bi-building"></i></span>
                <input asp-for="Nombre" class="form-control" />
            </div>
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>

        <!-- Estatus -->
        <div class="mb-3">
            <label asp-for="Estatus" class="form-label"></label>
            <div class="input-group">
                <span class="input-group-text"><i class="bi bi-toggle-on"></i></span>
                <select asp-for="Estatus" asp-items="ViewBag.EstatusList" class="form-select"></select>
            </div>
            <span asp-validation-for="Estatus" class="text-danger"></span>
        </div>

        <!-- Botones alineados a la derecha -->
        <div class="d-flex justify-content-end">
            <button type="submit" class="btn btn-primary me-2">Guardar</button>
            <a class="btn btn-secondary" asp-action="Index">Volver</a>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
