@model Departamento
@{
    ViewData["Title"] = "Borrar Departamento";
}

<div class="container" style="max-width: 600px; margin-top: 20px;">
    <!-- Título -->
    <h1 class="text-center mb-4">Eliminar Departamento</h1>

    <!-- Mensaje de confirmación -->
    <p class="text-center">¿Está seguro de que desea eliminar el departamento: <strong>@Model.Nombre</strong>?</p>

    <!-- Mostrar mensaje de error si existe -->
    @if (ViewData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger text-center" role="alert">
            @ViewData["ErrorMessage"]
        </div>
    }

    <!-- Formulario de confirmación -->
    <form asp-action="BorrarDepartamento" class="text-center">
        <input type="hidden" asp-for="Id" />

        <!-- Botones -->
        <div class="mt-4">
            <button type="submit" class="btn btn-danger me-2">
                <i class="bi bi-trash-fill"></i> Eliminar
            </button>
            <a class="btn btn-secondary" asp-action="Index">
                <i class="bi bi-arrow-left"></i> Volver
            </a>
        </div>
    </form>
</div>
